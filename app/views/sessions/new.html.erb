<h1>Login</h1>

<%= form_for(@user, url: login_path, class: "form-inline", role: "form") do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this session from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, class: "sr-only" %>
    <%= f.text_field :email, class: "forom-control", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: "forom-control", placeholder: "Password" %>
  </div>
  <%= f.submit value: "Sign in", class: "btn btn-default" %>
<% end %>
